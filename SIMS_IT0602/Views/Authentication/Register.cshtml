@model User
@{
    Layout = "~/Views/Shared/login_layout.cshtml";
}
@using (Html.BeginForm("Register", "Authentication", FormMethod.Post, new { @class = "form-wrapper sign-up" }))
{
    <div class="wrapper">
        <h2>Sign Up</h2>
        <div class="input-group">
            @Html.TextBoxFor(m => m.UserName)
            <label class="label">Username</label>
        </div>

        <div class="input-group">
            @Html.PasswordFor(m => m.Pass)
            <label class="label">Password</label>
        </div>

        <div class="input-group">
            @Html.PasswordFor(m => m.ConfirmPass)
            <label class="label">Confirm Password</label>
            @Html.ValidationMessageFor(m => m.ConfirmPass)
        </div>

        <div class="input-group">
            <label class="label"></label>
            <div class="role-buttons">
                <button type="button" class="toggle-button" data-value="Teacher">Teacher</button>
                <button type="button" class="toggle-button" data-value="Student">Student</button>
            </div>
            <input type="hidden" name="Role" id="selectedRole" value="">
        </div>
        <div class="remember">
            <label><input type="checkbox"> I agree to the terms & conditions</label>
        </div>

        <button type="submit">Sign Up</button>

        <div class="signUp-link">
            <p>Already have an account? <a href="#" class="signInBtn-link">Sign In</a></p>
        </div>
    </div>
}

    }
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Add event listener to the sign-up link
        document.querySelector(".signInBtn-link").addEventListener("click", function (event) {
            // Prevent the default action of the link
            event.preventDefault();
            // Redirect to the registration page
            window.location.href = "/Authentication/Login"; // Update this path with the correct path to your registration page
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        const toggleButtons = document.querySelectorAll(".toggle-button");
        const hiddenInput = document.getElementById("selectedRole");

        toggleButtons.forEach(button => {
            button.addEventListener("click", function () {
                toggleButtons.forEach(btn => btn.classList.remove("active"));
                this.classList.add("active");
                hiddenInput.value = this.getAttribute("data-value");
            });
        });
    });


</script>
