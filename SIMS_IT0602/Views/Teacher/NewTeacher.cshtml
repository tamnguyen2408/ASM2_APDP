@model Teacher
@{
    ViewData["Title"] = "Create Teacher";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<link href="~/Manage.css" rel="stylesheet" />
@section header {
    <header class="main-header clearfix" role="header">
        <div class="logo">
            <a href="#"><em>FPT</em> Polytechnic</a>
        </div>
        <a href="#menu" class="menu-link"><i class="fa fa-bars"></i></a>
        <nav id="menu" class="main-nav" role="navigation">
            <ul class="main-menu">
                <li><a href="/Admin/Index" class="external">Home</a></li>
                <li><a href="/Authentication/Logout" class="external">Logout</a></li>
            </ul>
        </nav>
    </header>
}

<section class="content">
    <h1 class="text-center" style="color: orange; margin-top:80px;">New Teacher</h1>
    @using (Html.BeginForm("NewTeacher", "Teacher", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Id, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DoB, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.DoB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.DoB, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Course, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.Course, new SelectList(ViewBag.SelectCourse, "Name", "Name"), "-- Select Course --", new { Class = "form-control" })
            @Html.ValidationMessageFor(m => m.Course, "", new { @class = "text-danger" })
        </div>
        <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("ManageTeacher", "Teacher")" class="btn btn-warning">Cancel</a>
        </div>
    }

</section>
