@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "ManageTeacher";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@* <link href="~/admin.css" rel="stylesheet" /> *@
@section header {
    <header class="main-header clearfix" role="header">
        <div class="logo">
            <a href="#"><em>FPT</em> Polytechnic</a>
        </div>
        <a href="#menu" class="menu-link"><i class="fa fa-bars"></i></a>
        <nav id="menu" class="main-nav" role="navigation">
            <ul class="main-menu">
                <li><a href="/Admin/Index" class="external">Home</a></li>
                <li><a href="/Student/ManageStudent" class="external">Student Management</a></li>
                <li><a href="/Course/ManageCourse" class="external">Courses Management</a></li>
                <li><a href="/Class/ManageClass" class="external">Classes Management</a></li>
                <li><a href="/Authentication/Logout" class="external">Logout</a></li>


            </ul>
        </nav>
    </header>
}

<section class="content">
    <h1 style="margin-top: 80px; color: orange;" class="text-center mb-4">Hello @ViewBag.UserName, you are @ViewBag.Role!</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">Date of Birth</th>
                    <th class="text-center">Course</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Id</td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center">@item.DoB</td>
                        <td class="text-center">@item.Course</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-danger mr-1" href="@Url.Action("Delete","Teacher",new {id=item.Id})">Delete</a>
                                <a class="btn btn-warning" href="@Url.Action("EditTeacher","Teacher",new {id=item.Id})">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <ul class="mt-3">
            <li>
                <a class="btn btn-success" style="margin: 50px 0 70px 0" asp-controller="Teacher" asp-action="NewTeacher">New Teacher</a>
            </li>
        </ul>
    </div>
</section>


